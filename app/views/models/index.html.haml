%h1 Models

= button_to 'Add model', new_model_path, method: :get, class: 'btn btn-primary mb-2'

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th Brand
      %th Description
      %th
      %th
      %th

  %tbody.align-middle
    - @models.each do |model|
      %tr{"url" => "/models/" + model.id.to_s}
        %td.width_for_string_field
          = model.name
        %td.width_for_string_field
          = model.brand.name
        %td= model.description
        %td.width_for_sed
          = button_to 'Show', model, method: :get, class: 'btn btn-info'
        %td.width_for_sed
          = button_to 'Edit', edit_model_path(model), method: :get, class: 'btn btn-secondary'
        %td.width_for_sed
          %button.deleteAction.btn.btn-danger{:type => "button"} Delete
