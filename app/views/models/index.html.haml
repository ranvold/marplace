%h1 Models

= button_to 'Add new model', new_model_path, method: :get, class: 'btn btn-primary'

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th Description
      %th Brand
      %th Submodel
      %th
      %th
      %th

  %tbody.align-middle
    - @models.each do |model|
      %tr
        %td= model.name
        %td= model.description
        %td= model.brand
        %td= model.submodel
        %td{:style => "width:10%"}
          = button_to 'Show', model, method: :get, class: 'btn btn-info'
        %td{:style => "width:10%"}
          = button_to 'Edit', edit_model_path(model), method: :get, class: 'btn btn-secondary'
        %td{:style => "width:10%"}
          = button_to 'Delete', model, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
