= form_for @model do |f|
  - if @model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@model.errors.count, "error")} prohibited this model from being saved:"
      %ul
        - @model.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :brand_id
    %br/
    = f.select :brand_id, Brand.all.collect { |b| [ b.name, b.id ] }, selected: @model.brand_id
  .actions
    %br/
    = f.submit 'Save', class: 'btn btn-success'

