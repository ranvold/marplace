= form_for @model do |f|
  - if @model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@model.errors.count, "error")} prohibited this model from being saved:"
      %ul
        - @model.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :submodel
    = f.text_field :submodel
  .actions
    = f.submit 'Save'
